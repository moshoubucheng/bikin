---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ContactModal from '@/components/ContactModal.astro';
import { useTranslations, getLocalizedContent, type Lang } from '@/i18n';
import { getCollection } from 'astro:content';

const { lang, slug } = Astro.params as { lang: Lang; slug: string };
const t = useTranslations(lang);

// 获取所有房源
const allProperties = await getCollection('properties');
const property = allProperties.find((p) => p.data.slug === slug);

// 如果找不到房源，返回 404
if (!property) {
  return Astro.redirect(`/${lang}/estate`);
}

// 货币格式化
function formatPrice(price: number, currency: string) {
  const formatter = new Intl.NumberFormat(lang === 'zh' ? 'zh-CN' : lang === 'ja' ? 'ja-JP' : 'en-US', {
    style: 'currency',
    currency: currency,
    maximumFractionDigits: 0,
  });
  return formatter.format(price * (currency === 'CNY' ? 10000 : 1));
}

// 状态标签
const statusLabels: Record<string, Record<Lang, string>> = {
  available: { zh: '在售', ja: '販売中', en: 'Available' },
  sold: { zh: '已售', ja: '売却済み', en: 'Sold' },
  reserved: { zh: '预约中', ja: '予約中', en: 'Reserved' },
};

const statusColors: Record<string, string> = {
  available: 'bg-green-500 text-white',
  sold: 'bg-gray-500 text-white',
  reserved: 'bg-estate-500 text-white',
};

const title = getLocalizedContent(property.data.title, lang) || '';
const location = getLocalizedContent(property.data.location, lang) || '';
const features = property.data.features || [];
---

<BaseLayout title={title} theme="estate">
  <!-- 返回按钮 -->
  <section class="bg-neutral-900 pt-20 pb-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <a
        href={`/${lang}/estate`}
        class="inline-flex items-center gap-2 text-gray-400 hover:text-white transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        {t('common.back')}
      </a>
    </div>
  </section>

  <!-- Hero Section -->
  <section class="bg-neutral-900 pb-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap items-start justify-between gap-4">
        <div>
          <div class="flex items-center gap-3 mb-4">
            <span class={`px-3 py-1 rounded-full text-sm font-medium ${statusColors[property.data.status]}`}>
              {statusLabels[property.data.status]?.[lang] || property.data.status}
            </span>
            {property.data.featured && (
              <span class="px-3 py-1 bg-estate-500 text-white rounded-full text-sm font-medium">
                {t('estate.featured')}
              </span>
            )}
          </div>
          <h1 class="text-3xl md:text-4xl font-bold text-white mb-2">{title}</h1>
          <p class="text-gray-400 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            {location}
          </p>
        </div>
        <div class="text-right">
          <p class="text-gray-400 text-sm mb-1">{t('estate.detail.price')}</p>
          <p class="text-3xl md:text-4xl font-bold text-estate-400">
            {formatPrice(property.data.price, property.data.currency)}
          </p>
          {property.data.area && (
            <p class="text-gray-400 mt-2">{property.data.area} m²</p>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- 图片画廊 -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-6">
        <!-- 主图 -->
        <div class="aspect-[4/3] bg-gradient-to-br from-estate-100 to-estate-200 rounded-xl overflow-hidden flex items-center justify-center">
          {property.data.images && property.data.images.length > 0 ? (
            <img
              src={typeof property.data.images[0] === 'string' ? property.data.images[0] : property.data.images[0].src}
              alt={title}
              class="w-full h-full object-cover"
            />
          ) : (
            <svg class="w-20 h-20 text-estate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
          )}
        </div>

        <!-- 其他图片 -->
        <div class="grid grid-cols-2 gap-4">
          {property.data.images && property.data.images.length > 1 ? (
            property.data.images.slice(1, 5).map((img, i) => (
              <div class="aspect-[4/3] bg-gradient-to-br from-estate-100 to-estate-200 rounded-lg overflow-hidden">
                <img
                  src={typeof img === 'string' ? img : img.src}
                  alt={`${title} - ${i + 2}`}
                  class="w-full h-full object-cover"
                />
              </div>
            ))
          ) : (
            Array.from({ length: 4 }).map((_, i) => (
              <div class="aspect-[4/3] bg-gradient-to-br from-estate-100 to-estate-200 rounded-lg flex items-center justify-center">
                <svg class="w-10 h-10 text-estate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            ))
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- 详情信息 -->
  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- 左侧：特色和描述 -->
        <div class="lg:col-span-2 space-y-8">
          <!-- 特色 -->
          {features.length > 0 && (
            <div>
              <h2 class="text-2xl font-bold text-gray-900 mb-4">{t('estate.detail.features')}</h2>
              <ul class="grid sm:grid-cols-2 gap-3">
                {features.map((feature) => (
                  <li class="flex items-center gap-3 text-gray-700">
                    <svg class="w-5 h-5 text-estate-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {getLocalizedContent(feature, lang)}
                  </li>
                ))}
              </ul>
            </div>
          )}

          <!-- 户型图 -->
          {property.data.layoutImage && (
            <div>
              <h2 class="text-2xl font-bold text-gray-900 mb-4">{t('estate.detail.layout')}</h2>
              <div class="bg-gray-50 rounded-xl p-4">
                <img
                  src={typeof property.data.layoutImage === 'string' ? property.data.layoutImage : property.data.layoutImage.src}
                  alt={`${title} - ${t('estate.detail.layout')}`}
                  class="w-full max-w-2xl mx-auto"
                />
              </div>
            </div>
          )}

          <!-- 描述 -->
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">{t('estate.detail.description')}</h2>
            <div class="prose prose-gray max-w-none">
              {property.body ? (
                <Fragment set:html={property.body} />
              ) : (
                <p class="text-gray-600">{t('estate.detail.noDescription')}</p>
              )}
            </div>
          </div>
        </div>

        <!-- 右侧：联系卡片 -->
        <div class="lg:col-span-1">
          <div class="sticky top-24 bg-gray-50 rounded-2xl p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-4">{t('contact.interested')}</h3>
            <p class="text-gray-600 mb-6">{t('contact.interestedDesc')}</p>
            <button
              data-modal-trigger="contact-modal"
              class="w-full px-6 py-4 bg-estate-500 text-white rounded-lg font-semibold hover:bg-estate-600 transition-colors flex items-center justify-center gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
              {t('estate.detail.contact')}
            </button>

            <!-- 发布日期 -->
            {property.data.publishDate && (
              <p class="text-gray-400 text-sm mt-6 text-center">
                {t('estate.detail.publishedAt')}: {property.data.publishDate}
              </p>
            )}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 联系模态框 -->
  <ContactModal />
</BaseLayout>
