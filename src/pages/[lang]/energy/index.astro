---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { useTranslations, getLocalizedContent, type Lang } from '@/i18n';
import { getCollection } from 'astro:content';

const { lang } = Astro.params as { lang: Lang };
const t = useTranslations(lang);

// 获取氢能图库
const galleryItems = await getCollection('energy-gallery');
const sortedGallery = galleryItems.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

// 获取氢能相关新闻
const allNews = await getCollection('news');
const energyNews = allNews
  .filter((news) => news.data.category === 'tech' || news.data.category === 'market')
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 6);
---

<BaseLayout title={t('energy.hero.title')} theme="energy">
  <!-- Hero Section - 科技感蓝色调 -->
  <section class="relative min-h-[70vh] flex items-center justify-center overflow-hidden bg-gradient-to-br from-energy-950 via-energy-900 to-energy-800">
    <!-- 科技感背景动效 -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#1e40af10_1px,transparent_1px),linear-gradient(to_bottom,#1e40af10_1px,transparent_1px)] bg-[size:4rem_4rem]"></div>
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-energy-500/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 right-1/4 w-64 h-64 bg-energy-400/20 rounded-full blur-3xl animate-pulse delay-1000"></div>
    </div>

    <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
      <div class="inline-flex items-center gap-2 bg-energy-500/20 rounded-full px-4 py-2 mb-6">
        <span class="w-2 h-2 bg-energy-400 rounded-full animate-pulse"></span>
        <span class="text-energy-200 text-sm font-medium">Hydrogen Energy</span>
      </div>
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
        {t('energy.hero.title')}
      </h1>
      <p class="text-xl text-energy-100 mb-8">
        {t('energy.hero.subtitle')}
      </p>
    </div>
  </section>

  <!-- 图库展示 Section - Grid 布局 -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 text-center">
        {t('energy.gallery.title')}
      </h2>
      <p class="text-gray-600 text-center mb-12 max-w-2xl mx-auto">
        {t('energy.gallery.desc')}
      </p>

      <!-- Gallery Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {sortedGallery.length > 0 ? (
          sortedGallery.map((item) => (
            <div class="group relative aspect-[4/3] rounded-xl overflow-hidden bg-gray-100 cursor-pointer">
              <!-- 占位图 -->
              <div class="absolute inset-0 bg-gradient-to-br from-energy-100 to-energy-200 flex items-center justify-center">
                <svg class="w-16 h-16 text-energy-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <!-- Hover Overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-energy-900/90 via-energy-900/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <div class="absolute bottom-0 left-0 right-0 p-4">
                  <span class="inline-block px-2 py-1 bg-energy-500 text-white text-xs rounded-full mb-2">
                    {item.data.category}
                  </span>
                  <h3 class="text-white font-semibold">
                    {getLocalizedContent(item.data.title, lang) || '图片标题'}
                  </h3>
                  <p class="text-energy-200 text-sm mt-1">
                    {getLocalizedContent(item.data.description || {}, lang)}
                  </p>
                </div>
              </div>
            </div>
          ))
        ) : (
          // 占位卡片
          Array.from({ length: 6 }).map((_, i) => (
            <div class="group relative aspect-[4/3] rounded-xl overflow-hidden bg-gradient-to-br from-energy-50 to-energy-100">
              <div class="absolute inset-0 flex items-center justify-center">
                <svg class="w-16 h-16 text-energy-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-energy-900/80 to-transparent">
                <span class="inline-block px-2 py-1 bg-energy-500 text-white text-xs rounded-full mb-2">
                  {['station', 'exhibition', 'equipment'][i % 3]}
                </span>
                <h3 class="text-white font-semibold">
                  {lang === 'zh' && `示例图片 ${i + 1}`}
                  {lang === 'ja' && `サンプル画像 ${i + 1}`}
                  {lang === 'en' && `Sample Image ${i + 1}`}
                </h3>
              </div>
            </div>
          ))
        )}
      </div>
    </div>
  </section>

  <!-- 行业动态 Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900">
          {t('energy.news.title')}
        </h2>
        <a href={`/${lang}/news`} class="text-energy-600 hover:text-energy-700 font-medium inline-flex items-center gap-2">
          {t('common.viewAll')}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {energyNews.length > 0 ? (
          energyNews.map((news) => (
            <article class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow">
              <div class="aspect-video bg-gradient-to-br from-energy-100 to-energy-200 flex items-center justify-center">
                <svg class="w-12 h-12 text-energy-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
              </div>
              <div class="p-6">
                <div class="flex items-center gap-2 mb-3">
                  <span class={`px-2 py-1 text-xs rounded-full ${
                    news.data.category === 'tech'
                      ? 'bg-energy-100 text-energy-700'
                      : 'bg-amber-100 text-amber-700'
                  }`}>
                    {news.data.category === 'tech' ? t('energy.tech.title') : t('energy.market.title')}
                  </span>
                  <span class="text-gray-400 text-sm">{news.data.date}</span>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2 line-clamp-2">
                  {getLocalizedContent(news.data.title, lang)}
                </h3>
                <p class="text-gray-600 text-sm line-clamp-2">
                  {getLocalizedContent(news.data.excerpt || {}, lang)}
                </p>
              </div>
            </article>
          ))
        ) : (
          // 占位新闻卡片
          Array.from({ length: 3 }).map((_, i) => (
            <article class="bg-white rounded-xl overflow-hidden shadow-sm">
              <div class="aspect-video bg-gradient-to-br from-energy-100 to-energy-200 flex items-center justify-center">
                <svg class="w-12 h-12 text-energy-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
              </div>
              <div class="p-6">
                <div class="flex items-center gap-2 mb-3">
                  <span class="px-2 py-1 bg-energy-100 text-energy-700 text-xs rounded-full">
                    {i % 2 === 0 ? t('energy.tech.title') : t('energy.market.title')}
                  </span>
                  <span class="text-gray-400 text-sm">2024-01-01</span>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">
                  {lang === 'zh' && `示例新闻标题 ${i + 1}`}
                  {lang === 'ja' && `サンプルニュース ${i + 1}`}
                  {lang === 'en' && `Sample News Title ${i + 1}`}
                </h3>
                <p class="text-gray-600 text-sm">
                  {lang === 'zh' && '这是新闻摘要的示例文本，用于展示布局效果。'}
                  {lang === 'ja' && 'これはレイアウトを表示するためのニュース概要のサンプルテキストです。'}
                  {lang === 'en' && 'This is sample text for the news excerpt to demonstrate the layout.'}
                </p>
              </div>
            </article>
          ))
        )}
      </div>
    </div>
  </section>
</BaseLayout>
