---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { useTranslations, type Lang } from '@/i18n';

const { lang } = Astro.params as { lang: Lang };
const t = useTranslations(lang);
---

<BaseLayout title={t('home.hero.title')}>
  <!-- Hero Section - 巨大的 Hero Image -->
  <section class="relative h-screen flex items-center justify-center overflow-hidden">
    <!-- 背景图片占位 -->
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
      <div class="absolute inset-0 bg-[url('/images/hero-pattern.svg')] opacity-10"></div>
    </div>

    <!-- Hero 内容 -->
    <div class="relative z-10 text-center px-4 max-w-5xl mx-auto">
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 animate-fade-in">
        {t('home.hero.title')}
      </h1>
      <p class="text-xl md:text-2xl text-gray-300 mb-12 animate-slide-up">
        {t('home.hero.subtitle')}
      </p>

      <!-- 两个入口卡片 -->
      <div class="grid md:grid-cols-2 gap-6 md:gap-8 mt-12">
        <!-- 氢能源入口 -->
        <a
          href={`/${lang}/energy`}
          class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-energy-600 to-energy-800 p-8 md:p-10 text-left transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-energy-500/30"
        >
          <div class="absolute top-0 right-0 w-32 h-32 bg-energy-400/20 rounded-full blur-3xl group-hover:bg-energy-400/40 transition-colors"></div>
          <div class="relative z-10">
            <div class="w-16 h-16 bg-white/20 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h2 class="text-2xl md:text-3xl font-bold text-white mb-3">
              {t('home.energy.title')}
            </h2>
            <p class="text-energy-100 mb-6">
              {t('home.energy.desc')}
            </p>
            <span class="inline-flex items-center text-white font-medium group-hover:gap-3 gap-2 transition-all">
              {t('home.energy.cta')}
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </span>
          </div>
        </a>

        <!-- 不动产入口 -->
        <a
          href={`/${lang}/estate`}
          class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-estate-600 to-estate-800 p-8 md:p-10 text-left transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-estate-500/30"
        >
          <div class="absolute top-0 right-0 w-32 h-32 bg-estate-400/20 rounded-full blur-3xl group-hover:bg-estate-400/40 transition-colors"></div>
          <div class="relative z-10">
            <div class="w-16 h-16 bg-white/20 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <h2 class="text-2xl md:text-3xl font-bold text-white mb-3">
              {t('home.estate.title')}
            </h2>
            <p class="text-estate-100 mb-6">
              {t('home.estate.desc')}
            </p>
            <span class="inline-flex items-center text-white font-medium group-hover:gap-3 gap-2 transition-all">
              {t('home.estate.cta')}
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </span>
          </div>
        </a>
      </div>
    </div>

    <!-- 滚动提示 -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </section>

  <!-- 简介 Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
          {t('home.about.title')}
        </h2>
        <p class="text-lg text-gray-600 leading-relaxed">
          {t('home.about.desc')}
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
